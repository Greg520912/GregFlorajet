{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Articles</h1>

        <form method="get" action="{{ path('app_article_list') }}">
            <div class="form-group">
                <label for="sourceId">Trier par source :</label>
                <select class="form-control" id="sourceId" name="sourceId">
                    <option value="">Toutes les sources</option>
                    {% for source in sources %}
                        <option value="{{ source['id'] }}" {% if source['id'] == selectedSourceId %}selected{% endif %}>{{ source['name'] }}</option>
                    {% endfor %}
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Trier</button>
        </form>

        <div class="row mt-4">
            {% for article in articles %}
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h2 class="card-title">{{ article.article_name }}</h2>
                            <p class="card-text">{{ article.content | raw }}</p>
                            <h6 class="card-subtitle mb-2 text-muted">{{ article.source_name }} - {{ article.publishedAt }}</h6>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">No articles found</p>
                </div>
            {% endfor %}
        </div>

        <div class="pagination mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_article_list', {'page': currentPage - 1, 'sourceId': selectedSourceId}) }}">Previous</a>
                        </li>
                    {% endif %}

                    {% for i in 1..totalPages %}
                        <li class="page-item {% if i == currentPage %}active{% endif %}">
                            {% if i == currentPage %}
                                <span class="page-link">{{ i }}</span>
                            {% else %}
                                <a class="page-link" href="{{ path('app_article_list', {'page': i, 'sourceId': selectedSourceId}) }}">{{ i }}</a>
                            {% endif %}
                        </li>
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_article_list', {'page': currentPage + 1, 'sourceId': selectedSourceId}) }}">Next</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}