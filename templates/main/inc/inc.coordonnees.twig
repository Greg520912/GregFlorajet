<div class="row">
    <div class="form-group col-lg-3 col-xs-6 padding">
        {{ form_widget(booking.leaderPas.numPas , {'attr': {'class': 'numpas', 'value': '1' }}) }}
        <label for="{{ booking.leaderPas.qualite.vars.id }}" class="form-label">Civilité*</label>
        {{ form_widget(booking.leaderPas.qualite,{'attr': {'onchange':'updatesession(this.id);updateLeader("qualite");checkCoordonnees();'}}) }}
    </div>
    <div class="form-group col-lg-3 col-xs-6 padding">
        <label for="{{ booking.leaderPas.nomPas.vars.id }}" class="form-label">Nom*</label>
        {{ form_widget(booking.leaderPas.nomPas,{'attr': {'onchange':'updatesession(this.id);updateLeader("nomPas");checkCoordonnees();'}}) }}
    </div>
    <div class="form-group col-lg-3 col-xs-6 padding">
        <label for="{{ booking.leaderPas.prenomPas.vars.id }}" class="form-label">Prénom*</label>
        {{ form_widget(booking.leaderPas.prenomPas,{'attr': {'onchange':'updatesession(this.id);updateLeader("prenomPas");checkCoordonnees();'}}) }}
    </div>
    <div class="form-group col-lg-3 col-xs-6 padding">
        <label for="{{ booking.leaderPas.dtNaissPas.vars.id }}" class="form-label">Date de naissance*</label>
        {{ form_widget(booking.leaderPas.dtNaissPas,{'attr': {'onkeyup':'updatesession(this.id);updateLeader("dtNaissPas");checkNaissance(this.id);', 'onchange':'checkCoordonnees();','placeholder':'jj/mm/aaaa', 'maxlength':'10'}}) }}
    </div>
</div>

<div class="row">
    <div class="form-group col-lg-6 col-xs-12 padding">
        <label for="{{ booking.leaderPas.emailDom.vars.id }}" class="form-label">Email*</label>
        {{ form_widget(booking.leaderPas.emailDom,{'attr': {'onchange':'updatesession(this.id);checkCoordonnees();'}}) }}
    </div>
    <div class="form-group col-lg-6 col-xs-12 padding">
        <label for="{{ booking.leaderPas.telMobile.vars.id }}" class="form-label">Téléphone*</label>
        {{ form_widget(booking.leaderPas.telMobile,  {'attr':{'onchange':'updatesession(this.id);checkCoordonnees();'}}) }}
    </div>
</div>

